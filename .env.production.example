# ============================================
# Al-Haramain Store - Production Environment
# ============================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control!
# ============================================

# ====================
# Application
# ====================
APP_NAME="Al-Haramain Store"
APP_ENV=production
APP_KEY=base64:GENERATE_A_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://your-domain.com

# Timezone
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# ====================
# Database (Docker MySQL)
# ====================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=alharamain
DB_USERNAME=alharamain
DB_PASSWORD=password
DB_ROOT_PASSWORD=rootpassword

# ====================
# Redis (Docker Redis)
# ====================
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ====================
# Cache & Session
# ====================
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# ====================
# Queue
# ====================
QUEUE_CONNECTION=redis

# ====================
# Logging
# ====================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=warning

# ====================
# Mail (Log for testing, use SMTP in real production)
# ====================
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="store@alharamain.test"
MAIL_FROM_NAME="${APP_NAME}"

# ====================
# Stripe Payments
# ====================
STRIPE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# ====================
# Laravel Reverb (WebSockets)
# ====================
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=your-app-id
REVERB_APP_KEY=your-app-key
REVERB_APP_SECRET=your-app-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

# ====================
# Filament Admin
# ====================
FILAMENT_FILESYSTEM_DISK=public

# ====================
# Security
# ====================
BCRYPT_ROUNDS=12

# ====================
# Docker Settings
# ====================
# Set to true to run migrations on container start
AUTO_MIGRATE=true
APP_PORT=80

# ====================
# Frontend Proxy (Railway)
# ====================
# Set this to your frontend Railway service URL (without https://)
# Example: al-haramain-store-frontend-production.up.railway.app
FRONTEND_UPSTREAM_HOST=your-frontend-service.up.railway.app

# CORS allowed origins (comma-separated, your production domain)
FRONTEND_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ====================
# Sanctum SPA Authentication
# ====================
# Include your production domain(s) for cookie-based auth
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com

# Session domain (use . prefix to include all subdomains)
SESSION_DOMAIN=.your-domain.com
